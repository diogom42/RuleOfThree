<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.diogofreitas.ruleofthree.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.250">

        <EditText
            android:id="@+id/input0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:hint="Valor 1"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:id="@+id/input1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/input0"
            android:layout_alignBottom="@+id/input0"
            android:layout_alignLeft="@+id/input3"
            android:layout_alignStart="@+id/input3"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:hint="Valor 2"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:id="@+id/input2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/input0"
            android:layout_alignStart="@+id/input0"
            android:layout_below="@+id/input0"
            android:layout_marginTop="57dp"
            android:ems="10"
            android:hint="Valor 3"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:id="@+id/input3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/input2"
            android:layout_alignBottom="@+id/input2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:ems="10"
            android:hint="Valor 4"
            android:inputType="number|numberSigned|numberDecimal" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/input3"
            android:layout_below="@+id/input3"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="="
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/buttonEqual"
            android:layout_toStartOf="@+id/buttonEqual"
            android:layout_below="@+id/input3"
            android:layout_marginTop="40dp"
            android:text="CE" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
